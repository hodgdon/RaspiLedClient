<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/server_ip_textinputlayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <EditText
            android:id="@+id/server_ip_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/server_ip_hint_text"
            android:inputType="phone"
        />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/server_port_textinputlayout"
        android:layout_width="80dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/server_port_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/server_port_hint_text"
            android:inputType="numberDecimal"
            />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>