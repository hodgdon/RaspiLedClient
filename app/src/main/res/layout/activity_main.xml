<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <android.support.v7.widget.GridLayout
        android:id="@+id/button_grid"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="4dp"

        grid:alignmentMode="alignBounds"
        grid:columnCount="2"

        grid:rowOrderPreserved="false"
        grid:useDefaultMargins="true">
        <Button
            android:id="@+id/red_button"
            android:text="@string/led_color_red_text"
            android:background="@color/ledColorRed"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill_horizontal|fill_vertical"
            />
        <Button
            android:text="@string/led_color_green_text"
            android:id="@+id/green_button"
            android:background="@color/ledColorGreen"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill_horizontal|fill_vertical"
            />
        <Button
            android:text="@string/led_color_blue_text"
            android:id="@+id/blue_button"
            android:background="@color/ledColorBlue"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill_horizontal|fill_vertical"
            />
        <Button
            android:text="@string/led_color_yellow_text"
            android:id="@+id/yellow_button"
            android:background="@color/ledColorYellow"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill_horizontal|fill_vertical"
            />

    </android.support.v7.widget.GridLayout>


</FrameLayout>